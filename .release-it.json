{
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": null,
    "autoGenerate": true
  },
  "git": {
    "commitArgs": ["--no-verify"],
    "commitMessage": "chore: release v${version}",
    "tagAnnotation": null
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": false
    }
  }
}
